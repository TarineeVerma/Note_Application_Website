<div class="custom-container">
  <div class="custom-row">
    <div class="custom-col">
      <nav aria-label="breadcrumb">
        <ol class="custom-breadcrumb">
          <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
          <li class="breadcrumb-item active">
            <%= note.title %>
          </li>
        </ol>
      </nav>
      <div class="custom-col-inner">
        <h1 class="custom-heading">View Note</h1>
        <button type="button" class="custom-button" id="deleteButton" onclick="openModal('<%= note.title %>')">
          Delete
        </button>
      </div>
    </div>
  </div>

  <form action="/dashboard/item/<%= noteID %>?_method=PUT" method="POST">
    <div>
        <input type="text" class="custom-input" id="title" name="title" value="<%= note.title %>"
            placeholder="Title">
    </div>

    <div>
        <textarea class="custom-textarea" id="body" name="body" placeholder="Take a note..."
            rows="12"><%= note.body %></textarea>
    </div>

    <div>
        <button type="submit" class="updatebutton">Update</button>
    </div>
</form>


</div>





