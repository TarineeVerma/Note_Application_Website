<div id="deleteModal" class="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">You are about to delete a note</h5>
        <button type="button" class="close" onclick="closeModal()">&times;</button>
      </div>
      <div class="modal-body">
        <p>
          This will delete your note <b class="notetitle-delete" id="noteTitle"></b><br />
          Are you sure?
        </p>
      </div>
      <div class="delete-modal-footer">
        <button type="button" class="btnclose" onclick="closeModal()">Close</button>
        <form action="/dashboard/item-delete/<%= noteID %>?_method=DELETE" method="POST" class="deleteButtonForm">
        <button type="submit" class="btndelete" onclick="deleteNote()">Delete Note</button>
      </form>
      </div>
    </div>
  </div>
</div>